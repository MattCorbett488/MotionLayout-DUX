<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.willowtree.matthewcorbett.motionlayoutdux.activities.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fragmentTransitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment Transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appBarTransitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Bar Transition"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerPageTransitionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentTransitionButton" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/viewPagerPageTransitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager Page Transition"
        app:layout_constraintBottom_toTopOf="@+id/keyframeAnimationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarTransitionButton" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/keyframeAnimationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Play (Keyframe Animations)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPagerPageTransitionButton" />
</android.support.constraint.ConstraintLayout>